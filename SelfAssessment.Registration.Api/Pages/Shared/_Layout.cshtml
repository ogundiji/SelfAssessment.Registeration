    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#organisation').hide();
            $('#organisation2').hide();
            $('#organisation3').hide();
            $('#individual').hide();
            $('#individual2').hide();
            $('#individual3').hide();

            $('#search').on('change', function () {

                let k = $('#search').val();
                if (k === "Individual") {
                    $('#individual').show();
                    $('#organisation').hide();
                    $('#organisation2').hide();
                    $('#organisation3').hide();
                }
                if (k === "Organisation") {
                    $('#organisation').show();
                    $('#individual').hide();
                    $('#individual2').hide();
                    $('#individual3').hide();
                }
                //  else{
                //     $('#organisation').hide();
                //     $('#individual').hide();
                //  }
            });
            $('#individual').on('change', function () {
                $('#individual2').show();
            });
            $('#organisation').on('change', function () {
                $('#organisation2').show();
            });
            $('#searchIndividual').click(function () {
                $("body").addClass("masthead2");
                let searchText = $('#searchText').val();
                $.Ajax({
                    url: '/api/ViewPayer/' + searchText,
                    type: 'GET',
                    dataType: 'json',
                    success: function (userlist) {
                        var output = '';
                        $.each(userlist, function (index, item) {
                            output += "<tr>";
                            output += "<td>" + index + "</td>";
                            output += "<td>" + item.payerName + "</td>";
                            output += "<td>" + item.UTIN + "</td>";
                            output += "<td>" + item.Email + "</td>";
                            output += "<td>" + item.TelephoneNumber + "</td>";
                            output += "</tr>";

                        });
                        $('#searchData').html(output);
                    },
                    error: function (request) {
                        alert(request.responseStatus);
                    }
                })
                $('#individual3').show();
            });
            $('#searchOrganisation').click(function () {
                $('#organisation3').show();
            });
            $('#example').DataTable();
            $('#example2').DataTable();

        });
    </script>
    @RenderSection("Scripts", required: false)
