@page
@model SelfAssessment.Registration.Api.Pages.TaxPayer.OrganisationModel
@{
    Layout = "_Layout2";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card wizard-card" data-color="purple" id="wizard">

                    <form>
                        <div class="wizard-header">
                            <div class="row">
                                <div class="col-md-3"><img src="~/assets/img/Ogun WEB-LOGO.png" style="height:35px;width:150px"></div>

                                <div class="col-md-6 text-center">
                                    <h4 class="wizard-title" style="color: green;">
                                        Organisation Registration
                                    </h4>
                                </div>
                                <div class="col-md-3"></div>
                            </div>
                        </div>
                        <div class="wizard-navigation">
                            <ul>
                                <li><a href="#location" data-toggle="tab">Step 1</a></li>
                                <li><a href="#type" data-toggle="tab">Step 2</a></li>
                                <li><a href="#facilities" data-toggle="tab">Step 3</a></li>
                                <li><a href="#description" data-toggle="tab">Step 4</a></li>
                            </ul>
                        </div>

                        <div class="tab-content">
                            <div class="tab-pane" id="location">
                                <h4 class="info-text">Business Information</h4>
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Organisation name/ Business name </label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.OrganisationName" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Organisation Abbreviation</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.OrganisationAbbrv" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Branch name</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.Branchname" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="label-up">
                                            <div class="form-group">
                                                <label class="control-label">CAC Registeration Date</label>
                                                <input type="date" class="form-control" asp-for="@Model.organisation.CacRegisterationDate" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Registration/RC No</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.RegisterationNo" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Office Line  </label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.OfficeLine" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Mobile Phone</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.MobileLine"/>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Office Location</label>
                                            <select class="form-control" asp-for="@Model.organisation.OfficeLoc">
                                                <option>within the state</option>
                                                <option>outside the state</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="type">
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">State</label>
                                            <select class="form-control" asp-for="@Model.organisation.State">
                                                <option>Ogun state</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">LGA(pick state to select local government)</label>
                                            <select class="form-control" asp-for="@Model.organisation.Lga">
                                                <option>State LGA</option>
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Address 1</label>
                                            <input type="text" class="form-control"  asp-for="@Model.organisation.Address1"/>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Address 2</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.Address2" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Postal Address</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.PostalAddress" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">City(pick LGA to see list of city)</label>
                                            <select class="form-control" asp-for="@Model.organisation.City">
                                                <option></option>
                                                <option>Abeokuta south</option>
                                                <option>Yewa north</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Nearest Tax offices</label>
                                            <select class="form-control" asp-for="@Model.organisation.TaxOffice">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Business sector</label>
                                            <select class="form-control" asp-for="@Model.organisation.BusinessSector">
                                                <option>- Select Business sector -</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="facilities">
                                <div class="row">
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Business Sub Sector</label>
                                            <select class="form-control" asp-for="@Model.organisation.BusinessSubsector">
                                                <option>- select business sub sector -</option>
                                                <option>loriem ipsium</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Ownership type</label>
                                            <select class="form-control" asp-for="@Model.organisation.BusinessSubclass">
                                                <option>-- select ownership type-- </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Email Address</label>
                                            <input type="email" class="form-control" asp-for="@Model.organisation.Email" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Name of director 1</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.Director1" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Name of director 2</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.Director2" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Payers type</label>
                                            <select class="form-control" asp-for="@Model.organisation.PayerType">
                                                <option>Employed</option>
                                                <option>unemployed</option>
                                                <option>Student</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="description">
                                <div class="row">
                                    <h4 class="info-text">Contact Information</h4>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Contact name</label>
                                            <input type="text" class="form-control"  asp-for="@Model.organisation.ContactName"/>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Designation</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.Designation" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Phone No</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.ContactPhoneNo" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Email Address</label>
                                            <input type="email" class="form-control" asp-for="@Model.organisation.ContactEmail" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Alernate Phone No</label>
                                            <input type="text" class="form-control" asp-for="@Model.organisation.ContactPhoneNo2" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="wizard-footer">
                            <div class="pull-right">
                                <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' />
                                <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' />
                            </div>
                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div> <!-- wizard container -->
        </div>
    </div> <!-- row -->
</div>